{
  "name": "voiceflow",
  "version": "1.0.0",
  "description": "Modern speech-to-text overlay app for Windows",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:electron": "tsc -p electron/tsconfig.json && tsc -p server/tsconfig.json",
    "electron:dev": "concurrently \"vite\" \"npm run build:electron && wait-on http://localhost:5173 && electron .\"",
    "electron:start": "npm run build:electron && electron .",
    "electron:build": "npm run build && npm run build:electron && electron-builder",
    "package:win": "npm run build && npm run build:electron && electron-builder --win"
  },
  "keywords": [
    "speech-to-text",
    "voice",
    "transcription",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0",
    "@types/ws": "^8.5.10"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.0",
    "uiohook-napi": "^1.5.0",
    "ws": "^8.16.0",
    "@google-cloud/speech": "^6.3.0",
    "dotenv": "^16.4.1"
  },
  "build": {
    "appId": "com.voiceflow.app",
    "productName": "VoiceFlow",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "resources/**/*"
    ],
    "extraResources": [
      {
        "from": "dist/server",
        "to": "server"
      },
      ".env"
    ],
    "win": {
      "target": [
        "portable",
        "dir"
      ],
      "icon": "resources/icon.png"
    }
  }
}